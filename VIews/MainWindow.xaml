<Window x:Class="Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MyPasswords" Height="450" Width="800">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Vertical">
            <!-- меню приложения -->
            <Menu>
                <MenuItem Header="File">
                    <MenuItem Header="New">
                        <MenuItem.Icon>
                            <Image Source="Images/new-file-24.png"></Image>
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="Open" Command="{Binding OpenFileCommand}">
                        <MenuItem.Icon>
                            <Image Source="Images/open-file-24.png"></Image>
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="Save" Command="{Binding SaveFileCommand}">
                        <MenuItem.Icon>
                            <Image Source="Images/save-24.png"></Image>
                        </MenuItem.Icon>
                    </MenuItem>
                </MenuItem>
                <MenuItem Header="Edit">
                    <MenuItem Header="Create Account" Command="{Binding CreateAccountCommand}">
                        <MenuItem.Icon>
                            <Image Source="Images/add-24.png"></Image>
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="Edit Account" Command="{Binding EditAccountCommand}"  CommandParameter="{Binding SelectedAccount}">
                        <MenuItem.Icon>
                            <Image Source="Images/edit-24.png"></Image>
                        </MenuItem.Icon>
                    </MenuItem>
                </MenuItem>
                <MenuItem Header="Version">
                    <MenuItem Header="Information">
                        <MenuItem.Icon>
                            <Image Source="Images/file-info-24.png"></Image>
                        </MenuItem.Icon>
                    </MenuItem>
                </MenuItem>
            </Menu>
            
            <StackPanel Orientation="Horizontal">
                <!-- основное меню с кнопками -->
                <ToolBar Name="ButtonsToolBar">
                    <Button Height="24" Width="24" ToolTip="Создать новый файл" Command="{Binding NewFileCommand}">
                        <Image Source="Images/new-file-24.png"></Image>
                    </Button>
                    <Button Height="24" Width="24" ToolTip="Открыть файл" Command="{Binding OpenFileCommand}">
                        <Image Source="Images/open-file-24.png"></Image>
                    </Button>
                    <Button Height="24" Width="24" ToolTip="Сохранить файл" Command="{Binding SaveFileCommand}">
                        <Image Source="Images/save-24.png"></Image>
                    </Button>
                </ToolBar>
                <ToolBar>
                    <Button Height="24" Width="24" ToolTip="Создать новый аккаунт" Command="{Binding CreateAccountCommand}">
                        <Image Source="Images/add-24.png"></Image>
                    </Button>
                    <Button Height="24" Width="24" ToolTip="Редактировать аккаунт" Command="{Binding EditAccountCommand}" CommandParameter="{Binding SelectedAccount}">
                        <Image Source="Images/edit-24.png"></Image>
                    </Button>
                </ToolBar>
            </StackPanel>

            
        </StackPanel>

        <!-- основной грид с паролями -->
        <DataGrid Name="PasswordsGrid" DockPanel.Dock="Bottom" 
                  ItemsSource="{Binding Accounts}" SelectedItem="{Binding SelectedAccount}"
                  IsReadOnly="True" CanUserAddRows="False" CanUserDeleteRows="False" AutoGenerateColumns="False" >
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Path=Login, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" Header="Login" Width="140"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Path=WebSite, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" Header="Web site" Width="150"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Path=Comment, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" Header="Comment" Width="*"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>
